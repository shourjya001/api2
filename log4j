log4j.rootLogger = INFO, API1File, API2File, stdout

# Appender for API1
log4j.appender.API1File=com.socgen.dbe.CustomRealTimeAppender
log4j.appender.API1File.apiName=API1
log4j.appender.API1File.File=../maestro_lib/logs/API1/maestrologs_{apiName}_{date}.log
log4j.appender.API1File.ImmediateFlush=true
log4j.appender.API1File.BufferedIO=false
log4j.appender.API1File.layout=org.apache.log4j.PatternLayout
log4j.appender.API1File.layout.ConversionPattern=%d (yyyy-MM-dd HH:mm:ss) [%t] %-5p %c(1): %m%n

# Appender for API2
log4j.appender.API2File=com.socgen.dbe.CustomRealTimeAppender
log4j.appender.API2File.apiName=API2
log4j.appender.API2File.File=../maestro_lib/logs/API2/maestrologs_{apiName}_{date}.log
log4j.appender.API2File.ImmediateFlush=true
log4j.appender.API2File.BufferedIO=false
log4j.appender.API2File.layout=org.apache.log4j.PatternLayout
log4j.appender.API2File.layout.ConversionPattern=%d (yyyy-MM-dd HH:mm:ss) [%t] %-5p %c(1): %m%n

# Console Appender
log4j.appender.stdout=org.apache.log4j.ConsoleAppender
log4j.appender.stdout.Target=System.out
log4j.appender.stdout.layout=org.apache.log4j.PatternLayout
log4j.appender.stdout.layout.ConversionPattern=%d (yyyy-MM-dd HH:mm:ss) [%t] %-5p %c(1): %m%n
